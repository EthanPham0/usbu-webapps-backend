generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  email         String          @id
  password      String

  frequencies   Frequency[]     @relation("user")

  @@map("users")
}

model App {
  id            Int             @id
  name          String

  frequencies   Frequency[]     @relation("app")

  @@map("apps")
}

model Frequency {
  userEmail     String          @map("user_email")
  appId         Int             @map("app_id")
  frequency     Int             @default(1)

  user          User            @relation("user", fields: [userEmail], references: [email])
  app           App             @relation("app", fields: [appId], references: [id])

  @@id([userEmail, appId])
  @@map("frequencies")
}
